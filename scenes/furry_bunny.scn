#Texture
NewTexture tex1 ../../mip/glacier.mip

#Shader
NewShader    curve_shader hair_shader
NewShader    bunny_shader plastic_shader
SetProperty3 bunny_shader diffuse .8 .5 .3
SetProperty3 bunny_shader reflect 0 0 0

NewShader    floor_shader plastic_shader
SetProperty3 floor_shader diffuse .3 .35 .4
SetProperty3 floor_shader reflect 0 0 0

NewShader dome_shader constant_shader

#Curve
NewCurve curve_data

#Mesh
NewMesh bunny_mesh
NewMesh floor_mesh
NewMesh dome_mesh

#Procedure
NewProcedure      bunny_proc stanfordply_procedure
AssignMesh        bunny_proc mesh bunny_mesh
SetStringProperty bunny_proc filepath ../../ply/bunny.ply
SetStringProperty bunny_proc io_mode r
RunProcedure      bunny_proc

NewProcedure      dome_proc stanfordply_procedure
AssignMesh        dome_proc mesh dome_mesh
SetStringProperty dome_proc filepath ../../ply/dome.ply
SetStringProperty dome_proc io_mode r
RunProcedure      dome_proc

NewProcedure      floor_proc stanfordply_procedure
AssignMesh        floor_proc mesh floor_mesh
SetStringProperty floor_proc filepath ../../ply/floor.ply
SetStringProperty floor_proc io_mode r
RunProcedure      floor_proc

NewProcedure      bunny_hair_gen curve_generator_procedure
AssignMesh        bunny_hair_gen mesh bunny_mesh
AssignCurve       bunny_hair_gen curve curve_data
RunProcedure      bunny_hair_gen

#ObjectInstance
NewObjectInstance  bunny1 bunny_mesh
AssignShader       bunny1 DEFAULT_SHADING_GROUP bunny_shader

NewObjectInstance  floor1 floor_mesh
SetProperty3       floor1 translate 3 0 3
AssignShader       floor1 DEFAULT_SHADING_GROUP floor_shader

NewObjectInstance  dome1       dome_mesh
SetProperty3       dome1       scale .5 .5 .5
AssignShader       dome1  DEFAULT_SHADING_GROUP      dome_shader
AssignTexture      dome_shader texture tex1

NewObjectInstance  curve1 curve_data
AssignShader       curve1 DEFAULT_SHADING_GROUP curve_shader

#ObjectGroup
NewObjectGroup     group1
AddObjectToGroup   group1  bunny1
AddObjectToGroup   group1  curve1
AssignObjectGroup  bunny1  shadow_target  group1
AssignObjectGroup  curve1  shadow_target  group1
AssignObjectGroup  floor1  shadow_target  group1

#FrameBuffer
NewFrameBuffer fb1 rgba

#Renderer
NewRenderer       ren1
AssignCamera      ren1 cam1
AssignFrameBuffer ren1 fb1
SetProperty2 ren1 resolution 640 480
#SetProperty2 ren1 resolution 160 120

#Rendering
RenderScene ren1

#Output
SaveFrameBuffer fb1 ../furry_bunny.fb
